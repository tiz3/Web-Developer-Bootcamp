<form>
  <!--for and id attribute link the two element together-->
  <!--label tag gives label for the input tag-->
  <!--the name tag gives the input value a name so that it is easier to retrive the value from the database later on-->
  <!--the required attribute makes the input required-->
  <label for="firstname">First Name:</label>
  <input id="firstname" type="text" name="firstname" placeholder="John" required> 
  <label for="lastname">Last Name:</label>
  <input id="lastname" type="text" name="lastname" placeholder="Smith" required>

  <div>
    <label for="male">Male</label>
	<input id="male" type="radio" name="gender" value="male">
	<label for="female">Female</label>
	<input id="female" type="radio" name="gender" value="female">
	<label for="other">Other</label>
    <input id="other" type="radio" name="gender" value="other">
  </div>

  <div>
    <label for="email">Email:</label>
	<input id="email" type="email" name="email" placeholder="your email" required>
	<label for="password">Password:</label>
	<!--the pattern attribute specify the length of the input-->
	<!--the title attribute specify the text for the input-->
	<input id="password" type="password" name="password" required pattern=".{5,10}" title="5 to 10 characters">
  </div>

  <div>
  	<!---->
    <label>
	  Birthday:
	<select name="month">
		<option>Month</option>
		<option value="Jan">Jan</option>
		<option value="Feb">Feb</option>
		<option value="March">March</option>
	</select>

	<select name="day">
	  <option>Day</option>
	  <option value="1">1</option>
	  <option value="2">2</option>
	  <option value="3">3</option>		
	</select>

	<select name="year">
	  <option>Year</option>
	  <option value="2016">2016</option>
	  <option value="2017">2017</option>
	  <option value="2018">2018</option>
	</select>
	</label>
  </div>

  <div>
    <label for="checkbox">I agree to the terms and conditions</label>
    <input id="checkbox" type="checkbox" name="checkbox">
  </div>

